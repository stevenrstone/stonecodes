{
  "plugins": ["eslint-plugin-react"],
  "extends": "airbnb-base",
  "rules": {
    "max-len": 0,
    "react/jsx-uses-vars": 1,
    "react/react-in-jsx-scope": 0,
    "space-before-function-paren": 0,
    "no-extra-semi": "off",
    "linebreak-style": "off"
  },
  "env": {
    "browser": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  }
}
